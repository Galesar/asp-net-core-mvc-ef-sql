@model MVC_lib.Models.Book
@{
    ViewBag.title = "Удаление книги";
}

<div>
    <center>
        <dl class="dl-horizontal">
            <dt>Название книги</dt>
            <dd>
                @Html.DisplayFor(model => model.m_Name)
            </dd>

            <dt>Описание книги</dt>
            <dd>
                @Html.DisplayFor(model => model.m_Description)
            </dd>

            <dt>Владелец книги</dt>
            <dd>
                @Html.DisplayFor(model => model.User.m_Name)
            </dd>
        </dl>

        <div>
            <form asp-controller="Home" asp-action="DeleteBook" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-outline-danger" value="Удалить" />
                </div>
            </form>
        </div>
    </center>

</div>
